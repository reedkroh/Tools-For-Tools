<!--LIST OF TOOLS DISPLAYED-->
<!--EACH TOOL WILL LINK TO tool.handlebars WHICH IS A CARD OF IT'S INFORMATION-->

<div class="container">
  <div class="row">
        <h3>Tools:</h3>
        <ul id="tools-list" class="list-group">
          {{#each allTools}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="tool/{{this.id}}">{{this.tool}}</a> <!--links to the route-->
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
  </div>
</div>